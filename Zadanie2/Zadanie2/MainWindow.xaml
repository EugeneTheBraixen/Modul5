<Window x:Class="Zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Текстовый редактор" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="OpenFile_Click"/>
                <MenuItem Header="Сохранить" Click="SaveFile_Click"/>
            </MenuItem>
        </Menu>
        <TextBox Name="txtEditor"
                 AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" Margin="0,20,0,0"/>
        <Button x:Name="SaveFile" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SaveFile_Click"/>
        <Button x:Name="OpenFile" Content="Загрузить" HorizontalAlignment="Left" Margin="67,0,0,0" VerticalAlignment="Top" Width="68" Click="OpenFile_Click"/>
    </Grid>
</Window>
